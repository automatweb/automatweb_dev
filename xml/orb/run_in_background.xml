			<function name="bg_control">
				<arguments>
					<required name="id" type="int" acl="view" />
					<required name="do" />
					<optional name="ru" />
				</arguments>
			</function>
		</action>

		<action name="bg_check_scheduler" nologin="1">
			<function name="bg_check_scheduler">
				<arguments>
				</arguments>
			</function>
		</action>

		<action name="bg_run" nologin="1">
			<function name="bg_run">
				<arguments>
					<required name="id" type="int" />
				</arguments>
			</function>
		</action>

	</class>
</orb>
