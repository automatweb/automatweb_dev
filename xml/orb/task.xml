<?xml version='1.0'?>
<orb>
	<class name="task" folder="applications/groupware" extends="class_base">
		<action name="search_for_proj">
			<function name="search_for_proj">
				<arguments>
					<optional name="retf" />
				</arguments>
			</function>
		</action>

		<action name="del_file_rel">
			<function name="del_file_rel">
				<arguments>
					<required name="fid" />
					<required name="from" />
					<optional name="return_url" />
				</arguments>
			</function>
		</action>

		<action name="create_bill_from_task">
			<function name="create_bill_from_task">
				<arguments>
					<required name="id" type="int" acl="view" />
					<required name="post_ru" />
				</arguments>
			</function>
		</action>

		<action name="start_task_timer">
			<function name="start_task_timer">
				<arguments>
					<required name="id" type="int" acl="edit" />
					<required name="post_ru" />
				</arguments>
			</function>
		</action>

		<action name="stop_task_timer">
			<function name="stop_task_timer">
				<arguments>
					<required name="id" type="int" acl="edit" />
					<required name="post_ru" />
				</arguments>
			</function>
		</action>

		<action name="stopper_pop">
			<function name="stopper_pop">
				<arguments>
					<optional name="id" />
					<optional name="s_action" />
					<optional name="type" />
					<optional name="name" />
					<optional name="desc" />
				</arguments>
			</function>
		</action>

	</class>
</orb>
