<?xml version='1.0'?>
<orb>
	<class name="page" folder="vcl">
		<action name="new">
			<function name="add">
				<arguments>
					<required name="parent"/>
				</arguments>
			</function>
		</action>

		<action name="change">
			<function name="change">
				<arguments>
					<required name="id"/>
				</arguments>
			</function>
		</action>
		
		<action name="submit">
			<function name="submit">
				<arguments/>
			</function>
		</action>

		<action name="show">
			<function name="show">
				<arguments>
					<required name="id"/>
					<optional name="section"/>
				</arguments>
			</function>
		</action>
	</class>
</orb>
		
