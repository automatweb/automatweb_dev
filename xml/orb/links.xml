<?xml version='1.0'?>
<orb>
	<class name="links">
		<action name="new">
			<function name="add">
				<arguments>
					<required name="parent"/>
					<optional name="docid"/>
				</arguments>
			</function>
		</action>

		<action name="submit">
			<function name="submit">
				<arguments>
					<required name="id"/>
					<required name="parent"/>
				</arguments>
			</function>
		</action>

		<action name="change">
			<function name="change">
				<arguments>
					<required name="id"/>
					<optional name="docid"/>
					<optional name="parent"/>
				</arguments>
			</function>
		</action>

		<action name="delete">
			<function name="delete">
				<arguments>
					<required name="id"/>
					<required name="parent"/>
				</arguments>
			</function>
		</action>

		<action name="search_doc">
			<function name="search_doc">
				<arguments>
				</arguments>
			</function>
		</action>

		<action name="show" nologin="1">
			<function name="show">
				<arguments>
					<required name="id"/>
				</arguments>
			</function>
		</action>

	</class>
</orb>
		
