<?xml version='1.0'?>
<orb>
	<class name="links" extends="class_base">
		<action name="delete">
			<function name="delete">
				<arguments>
					<required name="id"/>
					<required name="parent"/>
				</arguments>
			</function>
		</action>

		<action name="search_doc">
			<function name="search_doc">
				<arguments>
					<optional name="s_name" />
					<optional name="s_content" />
				</arguments>
			</function>
		</action>

		<action name="show" nologin="1">
			<function name="show">
				<arguments>
					<required name="id" type="int"/>
				</arguments>
			</function>
		</action>

	</class>
</orb>
		
