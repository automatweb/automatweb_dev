<?xml version='1.0'?>
<orb>
	<class name="basket" folder="www/dev/terryf/automatweb_dev/classes" extends="aw_template">
		<action name="new" >
			<function name="add">
				<arguments>
					<required name="parent" acl="add"/>
					<optional name="alias_to" />
					<optional name="return_url" />
				</arguments>
			</function>
		</action>

		<action name="submit" >
			<function name="submit">
				<arguments>
				</arguments>
			</function>
		</action>

		<action name="change" >
			<function name="change">
				<arguments>
					<required name="id" acl="edit;view"/>
					<optional name="return_url" />
				</arguments>
			</function>
		</action>

		<action name="show" nologin="1">
			<function name="draw_basket">
				<arguments>
					<required name="id" />
				</arguments>
			</function>
		</action>

		<action name="finalize_order" nologin="1">
			<function name="finalize_order">
				<arguments>
				</arguments>
			</function>
		</action>

		<action name="add_item" nologin="1">
			<function name="orb_add_item">
				<arguments>
					<required name="basket_id" type="int"/>
					<required name="item_id" type="int"/>
					<required name="form_id" type="int"/>
					<required name="redir" />
					<optional name="count" />
				</arguments>
			</function>
		</action>

	</class>
</orb>
