<?xml version='1.0'?>
<orb>
	<class name="cfgmanager" folder="cfg">
		<action name="new">
			<function name="add">
				<arguments>
					<required name="parent"/>
				</arguments>
			</function>
		</action>
		
		<action name="change">
			<function name="change">
				<arguments>
					<required name="id"/>
				</arguments>
			</function>
		</action>
		
		<action name="submit">
			<function name="submit">
				<arguments/>
			</function>
		</action>

		<property name="priobj">
			<store type="meta"/>
			<constraint type="int"/>

		</property>

		<property name="cfgform">
			<store type="meta"/>
			<constraint type="array"/>
		</property>
	</class>
</orb>
		
