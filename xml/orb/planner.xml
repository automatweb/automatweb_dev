				<arguments>
					<required name="id"/>
					<optional name="disp"/>
					<optional name="date"/>
				</arguments>
			</function>
		</action>

		<action name="day" default="1">
			<function name="user_planner">
				<arguments>
					<define name="disp" value="day"/>
					<optional name="date"/>
				</arguments>
			</function>
		</action>
		
		<action name="mark_as_closed">
			<function name="set_status">
				<arguments>
					<define name="status" value="1"/>
