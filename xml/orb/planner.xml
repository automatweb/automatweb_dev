		<action name="show_week">
			<function name="user_planner">
				<arguments>
					<optional name="date"/>
					<define name="disp" value="week"/>
				</arguments>
			</function>
		</action>
		
		<action name="week">
			<function name="user_planner">
				<arguments>
					<optional name="date"/>
					<define name="disp" value="week"/>
				</arguments>
			</function>
		</action>

		<action name="overview">
			<function name="user_planner">
				<arguments>
					<optional name="date"/>
