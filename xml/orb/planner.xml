			</function>
		</action>

		<action name="addevent">
			<function name="adm_event">
				<arguments>
					<optional name="parent"/>
					<required name="date"/>
					<define name="op" value="add"/>
				</arguments>
			</function>
		</action>
		
		<action name="editevent">
			<function name="adm_event">
				<arguments>
