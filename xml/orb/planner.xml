<?xml version='1.0'?>
<orb>
	<class name="planner" extends="class_base">
		<action name="view">
			<function name="view" nologin="1">
				<arguments>
					<required name="id" type="int"/>
					<optional name="date"/>
					<optional name="type"/>
					<optional name="ctrl" type="int"/>
					<optional name="ctrle" type="int"/>
				</arguments>
			</function>
		</action>
		
		<action name="redir">
			<function name="redir">
				<arguments>
				</arguments>
			</function>
		</action>

		<action name="new_event">
			<function name="new_event">
				<arguments>
					<required name="parent" type="int"/>
					<optional name="date"/>
					<optional name="time"/>
				</arguments>
			</function>
		</action>
		
		<action name="change_event">
			<function name="change_event">
				<arguments>
					<required name="id" type="int"/>
					<optional name="date"/>
				</arguments>
			</function>
		</action>
		
		<action name="event_repeaters">
			<function name="event_repeaters">
				<arguments>
					<required name="id" type="int"/>
					<optional name="cycle"/>
				</arguments>
			</function>
		</action>
		
		<action name="delete_repeater">
			<function name="delete_repeater">
				<arguments>
					<required name="id" type="int"/>
					<required name="cycle" type="int"/>
				</arguments>
			</function>
		</action>
		
		<action name="event_reminder">
			<function name="event_reminder">
				<arguments>
					<required name="id" type="int"/>
				</arguments>
			</function>
		</action>
		
		<action name="event_object_search">
			<function name="event_object_search">
				<arguments>
					<required name="id" type="int"/>
					<optional name="s_name"/>
					<optional name="s_type"/>
					<optional name="s_comment"/>
				</arguments>
			</function>
		</action>
</orb>
		
