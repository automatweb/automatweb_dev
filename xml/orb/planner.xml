				</arguments>
			</function>
		</action>
		
		<action name="month">
			<function name="user_planner">
				<arguments>
					<define name="disp" value="month"/>
					<optional name="date"/>
				</arguments>
			</function>
		</action>
		
		<action name="mark_as_problem">
			<function name="set_status">
				<arguments>
					<define name="status" value="2"/>
				</arguments>
			</function>
		</action>

		<action name="add_event">
			<function name="edit_event">
				<arguments>
					<required name="date"/>
