<?xml version='1.0'?>
<orb>
	<class name="class_base">
		<action name="new" all_args="1">
			<function name="change">
				<arguments>
					<optional name="parent" type="int" acl="add"/>
					<optional name="period"/>
					<optional name="alias_to" type="int"/>
					<optional name="return_url"/>
					<optional name="reltype" type="int"/>
				</arguments>
			</function>
		</action>

		<action name="change" all_args="1">
			<function name="change">
				<arguments>
					<optional name="id" type="int" acl="edit;view"/>
					<optional name="group"/>
					<optional name="period"/>
					<optional name="alias_to"/>
					<optional name="return_url"/>
				</arguments>
			</function>
		</action>

		<action name="submit">
			<function name="submit">
				<arguments/>
			</function>
		</action>

		<action name="list_aliases" all_args="1">
			<function name="list_aliases">
				<arguments/>
			</function>
		</action>
		
		<action name="submit_list" all_args="1">
			<function name="submit_list">
				<arguments/>
			</function>
		</action>
		
		<action name="search_aliases" all_args="1">
			<function name="search_aliases">
				<arguments/>
			</function>
		</action>
		
		<action name="addalias" all_args="1">
			<function name="orb_addalias">
				<arguments/>
			</function>
		</action>

		<action name="view">
			<function name="view">
				<arguments>
					<required name="id" type="int"/>
					<optional name="group"/>
					<optional name="period"/>
				</arguments>
			</function>
		</action>

		<action name="ng_serialize">
			<function name="_serialize">
				<arguments>	
					<required name="oid" type="int"/>
				</arguments>
			</function>
		</action>
	</class>
</orb>
