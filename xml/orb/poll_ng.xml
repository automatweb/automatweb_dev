<?xml version='1.0'?>
<orb>
	<class name="poll_ng" extends="class_base">
		<action name="show" nologin="1">
			<function name="show">
				<arguments>
					<required name="id"/>
				</arguments>
			</function>
		</action>

		<action name="vote" nologin="1">
			<function name="vote">
				<arguments>
					<optional name="section"/>
					<required name="oid" type="int"/>
					<required name="poll" type="int"/>
					<required name="choice" type="int"/>
				</arguments>
			</function>
		</action>
	</class>
</orb>
		
