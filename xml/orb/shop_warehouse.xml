<?xml version='1.0'?>
<orb>
	<class name="shop_warehouse" folder="applications/shop" extends="class_base">
		<action name="create_export" >
			<function name="create_export">
				<arguments>
					<required name="id" type="int" acl="view"/>
					<required name="product" type="int" acl="view"/>
				</arguments>
			</function>
		</action>

		<action name="create_reception" >
			<function name="create_reception">
				<arguments>
					<required name="id" type="int" acl="view"/>
					<required name="product" type="int" acl="view"/>
				</arguments>
			</function>
		</action>

		<action name="add_to_cart" >
			<function name="add_to_cart">
				<arguments>
					<required name="id" type="ind" acl="view"/>
					<optional name="sel" />
				</arguments>
			</function>
		</action>

		<action name="gen_order" >
			<function name="gen_order">
				<arguments>
					<required name="id" type="int" acl="view"/>
				</arguments>
			</function>
		</action>

	</class>
</orb>
