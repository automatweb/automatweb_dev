<?xml version='1.0'?>
<orb>
	<class name="desktop" folder="desktop" extends="class_base">
		<action name="show_desktop">
			<function name="show_desktop">
				<arguments>
				<required name="id"/>
				</arguments>
			</function>
		</action>
		<action name="dodelete">
			<function name="dodelete">
				<arguments>
				<required name="id"/>
				<required name="class_id"/>
				</arguments>
			</function>
		</action>
		<action name="redirect">
			<function name="redirect">
				<arguments>
				<required name="url"/>
				</arguments>
			</function>
		</action>
		
		<action name="show_icons">
			<function name="show_icons">
				<arguments>
				</arguments>
			</function>
		</action>

		<action name="pipe">
			<function name="pipe">
				<arguments>
				<required name="id"/>
				<optional name="element"/>
				<optional name="top"/>
				<optional name="left"/>
				<optional name="W"/>
				<optional name="I"/>
				<optional name="WS"/>
				<optional name="WC"/>
				<optional name="WI"/>
				<optional name="reorder"/>
				<optional name="orderby"/>
				<optional name="fetch_object"/>
				</arguments>
			</function>
		</action>
	</class>
</orb>

