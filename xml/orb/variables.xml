<?xml version='1.0'?>
<orb>
	<class name="variables">
		<action name="gen_list">
			<function name="gen_list">
				<arguments>
					<optional name="parent"/>
					<optional name="op"/>
				</arguments>
			</function>
		</action>

		<action name="add_cat">
			<function name="add_cat">
				<arguments>
					<required name="parent" type="int" acl="add"/>
				</arguments>
			</function>
		</action>
		
		<action name="change_cat">
			<function name="change_cat">
				<arguments>
					<required name="id" type="int" acl="view;edit"/>
				</arguments>
			</function>
		</action>
		
		<action name="delete_cat">
			<function name="delete_cat">
				<arguments>
					<required name="id" type="int" acl="delete"/>
				</arguments>
			</function>
		</action>
		
		<action name="submit_cat">
			<function name="submit_cat"/>
		</action>
		
		<action name="list_stamps">
			<function name="list_stamps"/>
		</action>
		
		<action name="add_stamp">
			<function name="add_stamp"/>
		</action>
		
		<action name="change_stamp">
			<function name="change_stamp">
				<arguments>
					<required name="id" type="int" acl="view;edit"/>
				</arguments>
			</function>
		</action>
		
		<action name="submit_stamp">
			<function name="submit_stamp"/>
		</action>
		
		<action name="delete_stamp">
			<function name="delete_stamp">
				<arguments>
					<required name="id" type="int" acl="delete"/>
				</arguments>
			</function>
		</action>
		
		<action name="new">
			<function name="add_var">
				<arguments>
					<required name="parent" acl="add"/>
				</arguments>
			</function>
		</action>

		<action name="submit_var">
			<function name="add_var_submit">
				<arguments>
				</arguments>
			</function>
		</action>

		<action name="change">
			<function name="change_var">
				<arguments>
					<required name="id" acl="change;view"/>
				</arguments>
			</function>
		</action>

		<action name="delete_var">
			<function name="delete_var">
				<arguments>
					<required name="id" acl="delete"/>
					<required name="parent"/>
				</arguments>
			</function>
		</action>

	</class>
</orb>
