<?xml version='1.0'?>
<orb>
	<class name="shop_order" folder="applications/shop" extends="class_base">
		<action name="show" nologin="1">
			<function name="show">
				<arguments>
					<required name="id" type="int" acl="view" />
				</arguments>
			</function>
		</action>

		<action name="gen_pdf" nologin="1">
			<function name="gen_pdf">
				<arguments>
					<required name="id" type="int" acl="view" />
					<optional name="html" />
				</arguments>
			</function>
		</action>

	</class>
</orb>
