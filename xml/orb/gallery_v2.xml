		<action name="show_image" nologin="1">
			<function name="show_image">
				<arguments>
					<optional name="id"/>
					<optional name="page"/>
					<optional name="col"/>
					<optional name="row"/>
				</arguments>
			</function>
		</action>
		<action name="view" nologin="1">
			<function name="view">
				<arguments>
					<optional name="id"/>
					<optional name="page"/>
					<optional name="col"/>
					<optional name="row"/>
				</arguments>
			</function>
		</action>

		<action name="send" nologin="1">
