<?xml version='1.0'?>
<orb>
	<class name="lists">
		<action name="new">
			<function name="add_list">
				<arguments>
					<required name="parent"/>
				</arguments>
			</function>
		</action>
		
		<action name="submit_list">
			<function name="add_list_submit">
				<arguments/>
			</function>
		</action>
		
		<action name="change">
			<function name="change_list">
				<arguments>
					<required name="id"/>
				</arguments>
			</function>
		</action>

		<action name="delete">
			<function name="delete_list">
				<arguments>
					<required name="id"/>
					<required name="parent"/>
				</arguments>
			</function>
		</action>
		
		<action name="gen_list">
			<function name="gen_list">
				<arguments>
					<optional name="parent"/>
				</arguments>
			</function>
		</action>
		
	</class>
</orb>
