<?xml version='1.0'?>
<orb>
	<class name="lists">
		<action name="new">
			<function name="add_list">
				<arguments>
					<required name="parent" acl="add"/>
				</arguments>
			</function>
		</action>
		
		<action name="submit_list">
			<function name="add_list_submit">
				<arguments/>
			</function>
		</action>
		
		<action name="change">
			<function name="change_list">
				<arguments>
					<required name="id" acl="edit;view"/>
				</arguments>
			</function>
		</action>

		<action name="delete">
			<function name="delete_list">
				<arguments>
					<required name="id" acl="delete"/>
					<required name="parent"/>
				</arguments>
			</function>
		</action>
		
		<action name="submit_default_list">
			<function name="submit_default_list"/>
		</action>
		
		<action name="change_list_vars">
			<function name="change_list_vars">
				<arguments>
					<required name="id"/>
				</arguments>
			</function>
		</action>
		
		<action name="gen_list">
			<function name="gen_list">
				<arguments>
					<optional name="parent" type="int"/>
					<optional name="op"/>
				</arguments>
			</function>
		</action>
		
		<action name="change_cat">
			<function name="change_cat">
				<arguments>
					<required name="id"/>
				</arguments>
			</function>
		</action>
		
		<action name="add_cat">
			<function name="add_cat">
				<arguments>
					<required name="parent" type="int"/>
				</arguments>
			</function>
		</action>
		
		<action name="submit_cat">
			<function name="submit_cat"/>
		</action>
		
		<action name="delete_cat">
			<function name="delete_cat">
				<arguments>
					<required name="id"/>
				</arguments>
			</function>
		</action>
		
		
	</class>
</orb>
