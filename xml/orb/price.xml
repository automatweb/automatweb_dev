<?xml version='1.0'?>
<orb>
	<class name="price" folder="common" extends="class_base">
		<action name="get_price_objects" all_args="1">
			<function name="get_price_objects">
				<arguments>
					<required name="object" type="oid" />
				</arguments>
			</function>
		</action>

		<action name="get_prices" all_args="1">
			<function name="get_prices">
				<arguments>
					<required name="o" type="object" />
				</arguments>
			</function>
		</action>

		<action name="add" all_args="1">
			<function name="add">
				<arguments>
					<required name="object" type="oid" />
					<optional name="name" type="String" />
					<optional name="parent" type="oid" default="object" />
					<optional name="currency" type="oid" />
					<optional name="sum" type="double" />
				</arguments>
			</function>
		</action>

		<action name="change_price" all_args="1">
			<function name="change_price">
				<arguments>
					<required name="id" type="oid" />
					<optional name="data" type="array" />
				</arguments>
			</function>
		</action>

	</class>
</orb>
