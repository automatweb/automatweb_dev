<?xml version='1.0'?>
<orb>
	<class name="taket_ebasket" folder="www/dev/terryf/awcl/classes/taket" extends="class_base">
		<action name="show" >
			<function name="show">
				<arguments>
					<optional name="saved" />
					<optional name="inputErr" />
					<optional name="sort" />
					<optional name="dir" />
				</arguments>
			</function>
		</action>

		<action name="send_order" >
			<function name="send_order">
				<arguments>
					<optional name="transport" />
					<optional name="kontakttelefon" />
					<optional name="eesperenimi" />
					<optional name="transport_name" />
				</arguments>
			</function>
		</action>

		<action name="add_item" >
			<function name="add_item">
				<arguments>
					<required name="product_code" />
					<required name="quantity" />
				</arguments>
			</function>
		</action>

		<action name="save_ebasket" >
			<function name="save_ebasket">
				<arguments>
					<optional name="productId" />
					<optional name="quantity" />
					<optional name="seesperenimi" />
					<optional name="skontakttelefon" />
					<optional name="stransport" />
					<optional name="sort" />
					<optional name="dir" />
				</arguments>
			</function>
		</action>

	</class>
</orb>
