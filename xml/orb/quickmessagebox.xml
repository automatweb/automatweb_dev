	<class name="quickmessagebox" folder="applications/quickmessage" extends="class_base">
		<action name="delete_message">
			<function name="delete_message">
				<arguments>
					<required name="id" type="int" acl="view" />
					<required name="sel" />
				</arguments>
			</function>
		</action>

		<action name="get_new_msgs_count">
			<function name="get_new_msgs_count">
				<arguments>
					<required name="id" type="int" acl="view" />
				</arguments>
			</function>
		</action>
	</class>
</orb>
