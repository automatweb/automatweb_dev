<?xml version='1.0'?>
<orb>
	<class name="ml_list_report" folder="mailinglist">
		<action name="new">
			<function name="add">
				<arguments>
					<required name="parent" acl="add"/>
					<optional name="alias_to"/>
					<optional name="return_url"/>
				</arguments>
			</function>
		</action>

		<action name="submit">
			<function name="submit">
				<arguments>
				</arguments>
			</function>
		</action>

		<action name="change">
			<function name="change">
				<arguments>
					<required name="id" acl="edit;view"/>
					<optional name="return_url"/>
				</arguments>
			</function>
		</action>

		<action name="show_mail">
			<function name="show_mail">
				<arguments>
					<required name="id"/>
					<required name="mail_id"/>
				</arguments>
			</function>
		</action>
	</class>
</orb>
		
