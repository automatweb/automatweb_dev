<?xml version='1.0'?>
<orb>
	<class name="images">
		<action name="new">
			<function name="add">
				<arguments>
					<required name="parent"/>
				</arguments>
			</function>
		</action>

		<action name="submit">
			<function name="submit">
				<arguments>
					<required name="parent"/>
				</arguments>
			</function>
		</action>

		<action name="submit_change">
			<function name="submit_change">
				<arguments>
					<required name="id"/>
					<required name="parent"/>
					<required name="idx"/>
				</arguments>
			</function>
		</action>
		<action name="change">
			<function name="change">
				<arguments>
					<required name="id"/>
				</arguments>
			</function>
		</action>
		<action name="delete">
			<function name="delete">
				<arguments>
					<required name="id"/>
					<optional name="parent"/>
					<optional name="docid"/>
				</arguments>
			</function>
		</action>
	</class>
</orb>
		
