<?xml version='1.0'?>
<orb>
	<class name="poll">

		<action name="new">
			<function name="add">
				<arguments>
					<optional name="parent" type="int"/>
					<optional name="return_url"/>
					<optional name="alias_to" type="int"/>
				</arguments>
			</function>
		</action>

		<action name="change">
			<function name="change">
				<arguments>
					<required name="id" type="int"/>
					<optional name="return_url"/>
				</arguments>
			</function>
		</action>
		
		<action name="delete">
			<function name="delete">
				<arguments>
					<required name="id" type="int"/>
				</arguments>
			</function>
		</action>

		<action name="submit">
			<function name="submit">
				<arguments>
				</arguments>
			</function>
		</action>
		
		<action name="list">
			<function name="poll_list">
				<arguments>
					<optional name="sortby"/>
				</arguments>
			</function>
		</action>
		
		<action name="set_active">
			<function name="set_active">
				<arguments>
					<required name="id" type="int"/>
				</arguments>
			</function>
		</action>

		<action name="translate">
			<function name="translate">
				<arguments>
					<required name="id" type="int"/>
					<optional name="return_url"/>
				</arguments>
			</function>
		</action>

		<action name="submit_translate">
			<function name="submit_translate">
				<arguments>
				</arguments>
			</function>
		</action>

		<action name="show" nologin="1">
			<function name="show">
				<arguments>
					<required name="poll_id" type="int"/>
					<optional name="answer_id"/>
				</arguments>
			</function>
		</action>

		<action name="clicks">
			<function name="clicks">
				<arguments>
					<required name="id" type="int"/>
				</arguments>
			</function>
		</action>

	</class>
</orb>
		
