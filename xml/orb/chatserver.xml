<?xml version='1.0'?>
<orb>
	<class name='chatserver'>
	
		<action name='new'>
			<function name='add'>
				<arguments>
					<required name='parent'/>
					<optional name='alias_to'/>
				</arguments>
			</function>
		</action>

		<action name='change'>
			<function name='change'>
				<arguments>
					<required name='id'/>
					<optional name='servername'/>
					<optional name='ircserver'/>
					<optional name='port'/>
				</arguments>
			</function>
		</action>
	
		<action name='submit'>
			<function name='submit'>
				<arguments>
					<optional name='servername'/>
					<optional name='ircserver'/>
					<optional name='port'/>
				</arguments>
			</function>
		</action>
	
	</class>
</orb>
