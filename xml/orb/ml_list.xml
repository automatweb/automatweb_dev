<?xml version='1.0'?>
<orb>
	<class name="ml_list" folder="mailinglist" extends="class_base">
		<action name="delete">
			<function name="orb_delete">
				<arguments>
					<required name="id" acl="delete"/>
					<required name="parent"/>
				</arguments>
			</function>
		</action>

		<action name="subscribe" nologin="1">
			<function name="subscribe">
				<arguments>
					<required name="id" type="int"/>
					<required name="rel_id" type="int"/>
				</arguments>
			</function>
		</action>
		
		<action name="post_message">
			<function name="post_message">
				<arguments>
					<required name="id"/>
					<optional name="targets"/>
				</arguments>
			</function>
		</action>

		<action name="submit_post_message">
			<function name="submit_post_message">
				<arguments>
				</arguments>
			</function>
		</action>

		</class>
	</orb>
