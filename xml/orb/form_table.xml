<?xml version='1.0'?>
<orb>
	<class name="form_table">

		<action name="new">
			<function name="add">
				<arguments>
					<required name="parent"/>
				</arguments>
			</function>
		</action>

		<action name="submit">
			<function name="submit">
				<arguments>
				</arguments>
			</function>
		</action>
		
		<action name="change">
			<function name="change">
				<arguments>
					<required name="id"/>
				</arguments>
			</function>
		</action>
		
		<action name="del_col">
			<function name="del_col">
				<arguments>
					<required name="id"/>
					<required name="col"/>
				</arguments>
			</function>
		</action>

		
		<action name="add_col">
			<function name="add_col">
				<arguments>
					<required name="id"/>
					<required name="after"/>
				</arguments>
			</function>
		</action>

		<action name="show_user_entries">
			<function name="show_user_entries">
				<arguments>
					<required name="table_id"/>
					<optional name="form_id"/>
					<optional name="chain_id"/>
					<optional name="op_id"/>
				</arguments>
			</function>
		</action>

	</class>
</orb>
		
