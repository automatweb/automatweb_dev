<?xml version='1.0'?>
<orb>
	<class name="object_chain">
		<action name="new">
			<function name="add">
				<arguments>
					<required name="parent" type="int" acl="add"/>
					<optional name="return_url"/>
				</arguments>
			</function>
		</action>

		<action name="submit">
			<function name="submit">
				<arguments>
				</arguments>
			</function>
		</action>

		<action name="change">
			<function name="change">
				<arguments>
					<required name="id" type="int" acl="view;change"/>
					<optional name="search"/>
					<optional name="s_name" default="%"/>
					<optional name="s_comment" default="%"/>
					<optional name="s_type"/>
					<optional name="s_id_from"/>
					<optional name="s_id_to"/>
					<optional name="s_parent"/>
					<optional name="return_url"/>
				</arguments>
			</function>
		</action>

	</class>
</orb>
		
