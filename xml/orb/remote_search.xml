<?xml version='1.0'?>
<orb>
	<class name="remote_search">
		<action name="new">
			<function name="add">
				<arguments>
					<required name="parent"/>
					<optional name="alias_to"/>
					<optional name="return_url"/>
				</arguments>
			</function>
		</action>

		<action name="submit">
			<function name="submit">
				<arguments>
				</arguments>
			</function>
		</action>

		<action name="change">
			<function name="change">
				<arguments>
					<required name="id"/>
					<optional name="return_url"/>
				</arguments>
			</function>
		</action>

		<action name="search" all_args="1">
			<function name="search">
				<arguments>
					<optional name="login_obj" type="int"/>
					<optional name="s_name"/>
					<optional name="s_class"/>
					<optional name="sel"/>
					<optional name="search" type="int"/>
				</arguments>
			</function>
		</action>

	</class>
</orb>
		
