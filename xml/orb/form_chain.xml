<?xml version='1.0'?>
<orb>
	<class name="form_chain">
		<action name="new">
			<function name="add">
				<arguments>
					<required name="parent"/>
					<optional name="alias_doc"/>
				</arguments>
			</function>
		</action>

		<action name="change">
			<function name="change">
				<arguments>
					<required name="id"/>
				</arguments>
			</function>
		</action>

		<action name="submit">
			<function name="submit">
				<arguments>
				</arguments>
			</function>
		</action>

		<action name="show">
			<function name="show">
				<arguments>
					<required name="id"/>
					<optional name="section"/>
					<optional name="form_id"/>
					<optional name="entry_id"/>
				</arguments>
			</function>
		</action>

		<action name="show_chain_entries">
			<function name="show_chain_entries">
				<arguments>
					<required name="id"/>
				</arguments>
			</function>
		</action>

		<action name="delete_entry">
			<function name="delete_entry">
				<arguments>
					<required name="id"/>
					<required name="entry_id"/>
				</arguments>
			</function>
		</action>

		<action name="submit_form">
			<function name="submit_form">
				<arguments>
				</arguments>
			</function>
		</action>

	</class>
</orb>
		
