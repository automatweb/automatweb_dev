<?xml version='1.0'?>
<orb>
	<class name="cal_event">

		<action name="new">
			<function name="add">
				<arguments>
					<required name="parent"/>
					<optional name="folder"/>
					<optional name="date"/>
				</arguments>
			</function>
		</action>

		<action name="change">
			<function name="change">
				<arguments>
					<required name="id"/>
					<optional name="date"/>
				</arguments>
			</function>
		</action>

		<action name="submit">
			<function name="submit"/>
		</action>

		<action name="repeaters">
			<function name="repeaters">
				<arguments>
					<required name="id"/>
				</arguments>
			</function>
		</action>
		
		<action name="submit_repeaters">
			<function name="submit_repeaters"/>
		</action>
		
		<action name="reminder">
			<function name="reminder">
				<arguments>
					<required name="id"/>
				</arguments>
			</function>
		</action>
		
		<action name="submit_reminder">
			<function name="submit_reminder"/>
		</action>
		
		<action name="search">
			<function name="search">
				<arguments>
					<required name="id" type="int"/>
					<optional name="s_name"/>
					<optional name="s_type"/>
					<optional name="s_comment"/>
				</arguments>
			</function>
		</action>

		<action name="addalias">
			<function name="addalias">
				<arguments>
					<required name="alias" type="int"/>
					<required name="id" type="int"/>
				</arguments>
			</function>
		</action>

		<action name="test">
			<function name="test" all_args="1">
				<arguments/>
			</function>
		</action>
		

	</class>
</orb>
		
