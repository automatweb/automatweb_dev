<?xml version='1.0'?>
<orb>
	<class name="image" extends="class_base">
		<action name="show" nologin="1">
			<function name="show">
				<arguments>
					<required name="file"/>
				</arguments>
			</function>
		</action>

		<action name="view" nologin="1">
			<function name="view">
				<arguments>
					<required name="id" type="int"/>
				</arguments>
			</function>
		</action>

		<action name="get_image_list" is_content="1" caption="Viimati lisatud pildid">
			<function name="get_image_list">
				<arguments>
					<required name="count" type="int"/>
				</arguments>
			</function>
		</action>
	</class>
</orb>
		
