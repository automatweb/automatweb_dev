<?xml version='1.0'?>
<orb>
	<class name='chatobj'>
	
		<action name='new'>
			<function name='add'>
				<arguments>
					<required name='parent'/>
					<optional name='alias_to'/>
					<optional name='icon'/>
					<optional name='mode'/>
					<optional name='channel'/>
					<optional name='message'/>
					<optional name='privat'/>
					<optional name='windowcolor'/>
					<optional name='backcolor'/>
					<optional name='textcolor'/>
					<optional name='buttoncolor'/>
				</arguments>
			</function>
		</action>

		<action name='change'>
			<function name='change'>
				<arguments>
					<required name='id'/>
					<optional name='parent'/>
					<optional name='chatObjId'/>
					<optional name='icon'/>
					<optional name='mode'/>
					<optional name='channel'/>
					<optional name='message'/>
					<optional name='privat'/>
					<optional name='windowcolor'/>
					<optional name='backcolor'/>
					<optional name='textcolor'/>
					<optional name='buttoncolor'/>
				</arguments>
			</function>
		</action>
	
		<action name='submit'>
			<function name='submit'>
				<arguments>
					<optional name='parent'/>
					<optional name='buttontext'/>
					<optional name='icon'/>
					<optional name='mode'/>
					<optional name='channel'/>
					<optional name='message'/>
					<optional name='privat'/>
					<optional name='windowcolor'/>
					<optional name='backcolor'/>
					<optional name='textcolor'/>
					<optional name='buttoncolor'/>
				</arguments>
			</function>
		</action>
	
	</class>
</orb>
