<?xml version='1.0'?>
<orb>
	<class name="file">
		<action name="new">
			<function name="add">
				<arguments>
					<optional name="parent"/>
					<optional name="id"/>
					<optional name="msg_id"/>
					<optional name="return_url"/>
				</arguments>
			</function>
		</action>
		
		<action name="change">
			<function name="change">
				<arguments>
					<optional name="parent"/>
					<required name="id"/>
					<optional name="return_url"/>
					<optional name="doc"/>
				</arguments>
			</function>
		</action>
		
		<action name="submit_add">
			<function name="submit_add">
				<arguments>
					<required name="parent"/>
					<optional name="id"/>
				</arguments>
			</function>
		</action>
		
		<action name="submit_change">
			<function name="submit_change">
				<arguments>
					<required name="parent"/>
					<required name="id"/>
				</arguments>
			</function>
		</action>
		
		<action name="preview" nologin="1">
			<function name="show">
				<arguments>
					<required name="id"/>
				</arguments>
			</function>
		</action>
</class>
</orb>
		
